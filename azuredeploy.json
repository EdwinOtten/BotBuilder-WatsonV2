{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "3.0.0.0",
    "parameters": {
        "botName": {
            "type": "string",
            "maxLength": 24,
            "defaultValue": ""
        },
        "name": {
            "type": "string",
            "maxLength": 24
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources"
            }
        },
        "locationName": {
            "type": "string",
            "defaultValue": "West Europe"
        },
        "alwaysOn": {
            "type": "bool",
            "defaultValue": false
        },
        "sku": {
            "type": "string",
            "defaultValue": "Free"
        },
        "nodeVersion": {
            "type": "string",
            "defaultValue": "~10"
        },
        "resourceTags": {
            "type": "object",
            "defaultValue": {
                "Environment": "Dev",
                "Project": "Tutorial"
            }
        },
        "ASSISTANT_APIKEY": {
            "type": "string"
        },
        "ASSISTANT_IAM_APIKEY": {
            "type": "string"
        },
        "ASSISTANT_URL": {
            "type": "string"
        },
        "ASSISTANT_AUTH_TYPE": {
            "type": "string",
            "defaultValue": "iam"
        },
        "ASSISTANT_ID": {
            "type": "string"
        },
        "SERVICE_URL": {
            "type": "string",
            "defaultValue": "https://api.eu-de.assistant.watson.cloud.ibm.com"
        },
        "appId": {
            "type": "string"
        },
        "appPassword": {
            "type": "string"
        }
    },
    "variables": {
        "cosmosDbName": "[toLower(parameters('name'))]",
        "cosmosDbTags": {
            "defaultExperience": "Core (SQL)",
            "hidden-cosmos-mmspecial": "",
            "CosmosAccountType": "Production"
        },
        "hostingPlanName": "[concat(parameters('name'), '-Plan')]"
    },
    "resources": [
        { // Application Insights
            "apiVersion": "2015-05-01",
            "name": "[parameters('name')]",
            "type": "microsoft.insights/components",
            "location": "[parameters('location')]",
            "kind": "other",
            "tags": "[parameters('resourceTags')]",
            "properties": {
                "Application_Type": "web",
                "ApplicationId": "[parameters('name')]",
                "Request_Source": "rest"
            }
        },
        { // Window App Service plan
            "name": "[variables('hostingPlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[parameters('location')]",
            "apiVersion": "2018-02-01",
            "sku": {
                "name": "[parameters('sku')]"
            },
            "dependsOn": [],
            "properties": {
                "name": "[variables('hostingPlanName')]",
                "numberOfWorkers": 1
            }
        },
        { // CosmosDB
            "apiVersion": "2019-12-12",
            "kind": "GlobalDocumentDB",
            "type": "Microsoft.DocumentDb/databaseAccounts",
            "name": "[variables('cosmosDbName')]",
            "location": "[parameters('location')]",
            "tags": "[union(parameters('resourceTags'), variables('cosmosDbTags'))]",
            "properties": {
                "databaseAccountOfferType": "Standard",
                "locations": [
                    {
                        "id": "[concat(variables('cosmosDbName'), '-', parameters('location'))]",
                        "failoverPriority": 0,
                        "locationName": "[parameters('locationName')]"
                    }
                ],
                "enableMultipleWriteLocations": false,
                "isVirtualNetworkFilterEnabled": false,
                "virtualNetworkRules": [],
                "ipRangeFilter": "104.42.195.92,40.76.54.131,52.176.6.30,52.169.50.45,52.187.184.26",
                "dependsOn": [],
                "capabilities": [],
                "enableFreeTier": false
            },
            "resources": [
                {
                    "type": "sqlDatabases",
                    "name": "botdocs",
                    "apiVersion": "2019-08-01",
                    "dependsOn": [
                        "[resourceId('Microsoft.DocumentDB/databaseAccounts', variables('cosmosDbName'))]"
                    ],
                    "properties": {
                        "options": {},
                        "resource": {
                            "id": "botdocs"
                        }
                    },
                    "resources": [
                        {
                            "type": "containers",
                            "name": "botdata",
                            "apiVersion": "2019-08-01",
                            "dependsOn": [
                                "[resourceId('Microsoft.DocumentDB/databaseAccounts/sqlDatabases', variables('cosmosDbName'), 'botdocs')]"
                            ],
                            "properties": {
                                "resource": {
                                    "id": "botdata",
                                    "partitionKey": {
                                        "paths": [
                                            "/id"
                                        ],
                                        "kind": "Hash"
                                    }
                                },
                                "options": {
                                    "throughput": "400"
                                }
                            }
                        }
                    ]
                }
            ]
        },
        { // Web App
            "apiVersion": "2018-11-01",
            "type": "Microsoft.Web/sites",
            "kind": "app",
            "name": "[parameters('name')]",
            "location": "[parameters('locationName')]",
            "tags": "[parameters('resourceTags')]",
            "identity": {
                "type": "SystemAssigned"
            },
            "dependsOn": [
                "[resourceId('microsoft.insights/components/', parameters('name'))]",
                "[resourceId('Microsoft.DocumentDB/databaseAccounts/', variables('cosmosDbName'))]",
                "[resourceId('Microsoft.Web/serverfarms/', variables('hostingPlanName'))]"
            ],
            "properties": {
                "name": "[parameters('name')]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[reference(resourceId('microsoft.insights/components/', parameters('name')), '2015-05-01').InstrumentationKey]"
                        },
                        {
                            "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
                            "value": "[reference(resourceId('microsoft.insights/components/', parameters('name')), '2015-05-01').ConnectionString]"
                        },
                        {
                            "name": "ApplicationInsightsAgent_EXTENSION_VERSION",
                            "value": "~2"
                        },
                        {
                            "name": "XDT_MicrosoftApplicationInsights_Mode",
                            "value": "default"
                        },
                        {
                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                            "value": "[parameters('nodeVersion')]"
                        },
                        {
                            "name": "ASSISTANT_APIKEY",
                            "value": "[parameters('ASSISTANT_APIKEY')]"
                        },
                        {
                            "name": "ASSISTANT_IAM_APIKEY",
                            "value": "[parameters('ASSISTANT_IAM_APIKEY')]"
                        },
                        {
                            "name": "ASSISTANT_URL",
                            "value": "[parameters('ASSISTANT_URL')]"
                        },
                        {
                            "name": "ASSISTANT_AUTH_TYPE",
                            "value": "[parameters('ASSISTANT_AUTH_TYPE')]"
                        },
                        {
                            "name": "ASSISTANT_ID",
                            "value": "[parameters('ASSISTANT_ID')]"
                        },
                        {
                            "name": "SERVICE_URL",
                            "value": "[parameters('SERVICE_URL')]"
                        },
                        {
                            "name": "appId",
                            "value": "[parameters('appId')]"
                        },
                        {
                            "name": "appPassword",
                            "value": "[parameters('appPassword')]"
                        },
                        {
                            "name": "storageKey",
                            "value": "[listKeys(resourceId('Microsoft.DocumentDB/databaseAccounts', variables('cosmosDbName')), '2019-08-01').primaryMasterKey]"
                        },
                        {
                            "name": "storageURL",
                            "value": "[reference(resourceId('Microsoft.DocumentDB/databaseAccounts', variables('cosmosDbName')), '2019-08-01').documentEndpoint]"
                            // "value": "[concat('https://', variables('cosmosDbName'),'.documents.azure.com:443')]"
                        }
                        // ,
                        // {
                        //     "name": "KeyVaultName",
                        //     "value": "[parameters('name')]"
                        // }
                    ],
                    "metadata": [
                        {
                            "name": "CURRENT_STACK",
                            "value": "node"
                        }
                    ],
                    "phpVersion": "OFF",
                    "nodeVersion": "[parameters('nodeVersion')]",
                    "alwaysOn": "[parameters('alwaysOn')]"
                },
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
                "clientAffinityEnabled": true
            }
        },
        {
            "type": "Microsoft.BotService/botServices",
            "apiVersion": "2017-12-01",
            "name": "[parameters('botName')]",
            "location": "global",
            "dependsOn": [
                "[resourceId('microsoft.insights/components/', parameters('name'))]",
                "[resourceId('Microsoft.Web/sites/', parameters('name'))]"
            ],
            "sku": {
                "name": "[parameters('sku')]"
            },
            "kind": "bot",
            "properties": {
                "name": "[parameters('botName')]",
                "displayName": "[parameters('botName')]",
                "endpoint": "[concat('https://', reference(resourceId('Microsoft.Web/sites', parameters('name')), '2018-02-01').defaultHostName, '/api/messages')]",
                "msaAppId": "[parameters('appId')]",
                "developerAppInsightsApplicationId": "[reference(resourceId('microsoft.insights/components/', parameters('name')), '2015-05-01').AppId]",
                "developerAppInsightKey": "[reference(resourceId('microsoft.insights/components/', parameters('name')), '2015-05-01').InstrumentationKey]"
            }
        }
